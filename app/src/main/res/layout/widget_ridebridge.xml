<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#333333">

    <!-- Album Art -->
    <ImageView
        android:id="@+id/widget_album_art"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:contentDescription="Album Art"
        android:background="#1A1A1A" />

    <!-- Connection Status Indicator (Upper Left) -->
    <ImageView
        android:id="@+id/widget_connection_status"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:contentDescription="Connection Status"
        android:src="@drawable/ic_circle_red"
        android:scaleType="centerInside" />

    <!-- Track Info -->
    <ImageButton
        android:id="@+id/widget_voice_command"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:contentDescription="Voice Command"
        android:scaleType="centerInside"
        android:src="@android:drawable/ic_btn_speak_now"
        android:tint="#FFFFFF" />

    <LinearLayout
        android:id="@+id/widget_track_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_album_art"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/widget_track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unknown Track"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/widget_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unknown Artist"
            android:textSize="16sp"
            android:textColor="#B3B3B3"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="center"
            android:paddingTop="4dp" />
    </LinearLayout>

    <!-- Time and Progress Bar -->
    <LinearLayout
        android:id="@+id/widget_seek_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_track_info"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/widget_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/widget_progress"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:max="100"
            android:progress="0"
            style="@android:style/Widget.ProgressBar.Horizontal" />

        <TextView
            android:id="@+id/widget_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Playback Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_seek_layout"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/widget_prev"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="20dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_media_previous"
            android:tint="#FFFFFF"
            android:scaleType="centerInside"
            android:contentDescription="Previous" />

        <ImageButton
            android:id="@+id/widget_play_pause"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle_white"
            android:src="@android:drawable/ic_media_play"
            android:tint="#000000"
            android:scaleType="centerInside"
            android:contentDescription="Play/Pause" />

        <ImageButton
            android:id="@+id/widget_next"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_media_next"
            android:tint="#FFFFFF"
            android:scaleType="centerInside"
            android:contentDescription="Next" />
    </LinearLayout>

</RelativeLayout>
